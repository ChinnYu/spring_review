<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--管理bean-->
    <!--具體給程序注入甚麼類,可以通過配置-->
    <!--自動裝配,省去關聯關係的設置
     autowire="constructor":通過構造方法的方式來幫我們裝配

     -->
    <bean id="userService" class="com.cyl.spring.service.UserService" scope="singleton" autowire="byType"></bean>
    <!--spring 要幫你做甚麼事情 前提你都歸他管-->
    <bean id="userDao" class="com.cyl.spring.dao.UserDao"/>
</beans>